package practice;

import java.util.*;


public class week1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner input = new Scanner( System.in);
		
		System.out.println("정수 하나를 입력하시오.: ");
		
		int x = input.nextInt();
		
		int y = (((x/2)/2)%2)*1000+ (((x/2)/2)%2)*100 + ((x/2)%2)*10 + (x%2)*1;
	    
		System.out.println(y);
	}

}
